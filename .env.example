# Domain for HTTPS (optional)
# Leave empty for HTTP-only (works with any IP or localhost)
# Set to a real FQDN for automatic HTTPS via Let's Encrypt
# Example: DOMAIN=email-specter.example.com
DOMAIN=

# Backend URL shown in webhooks
# Defaults to http://${DOMAIN}/ or auto-detected public IP if empty
# For HTTPS, set explicitly: BACKEND_URL=https://email-specter.example.com/
BACKEND_URL=

# MongoDB database name
MONGO_DB=email-specter

# Data retention settings
LOG_RETENTION_PERIOD=30d
DATA_RETENTION_PERIOD=365d

# Session settings
SESSION_LENGTH=24h

# Cache settings
TOP_ENTITIES_CACHE_DURATION=5m
