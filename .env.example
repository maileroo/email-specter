# Domain or IP for the application (default: localhost)
# Works with IP addresses or domain names
# Example: DOMAIN=139.84.172.184 or DOMAIN=email-specter.example.com
DOMAIN=localhost

# For HTTPS with a real domain, set BACKEND_URL explicitly:
# BACKEND_URL=https://email-specter.example.com/

# MongoDB database name
MONGO_DB=email-specter

# Data retention settings
LOG_RETENTION_PERIOD=30d
DATA_RETENTION_PERIOD=365d

# Session settings
SESSION_LENGTH=24h

# Cache settings
TOP_ENTITIES_CACHE_DURATION=5m
